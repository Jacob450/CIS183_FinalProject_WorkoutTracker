<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainMenu">

    <Button
        android:id="@+id/btn_mm_pastsessions"
        android:layout_width="185dp"
        android:layout_height="0dp"
        android:layout_marginTop="90dp"
        android:layout_marginBottom="114dp"
        android:text="View Past Sessions"
        app:layout_constraintBottom_toTopOf="@+id/btn_mm_newsession"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_mm_progress"
        android:layout_width="185dp"
        android:layout_height="0dp"
        android:layout_marginBottom="240dp"
        android:text="View Progress"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_mm_newsession" />

    <Button
        android:id="@+id/btn_mm_newsession"
        android:layout_width="185dp"
        android:layout_height="0dp"
        android:layout_marginBottom="101dp"
        android:text="Start New Session"
        app:layout_constraintBottom_toTopOf="@+id/btn_mm_progress"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_mm_pastsessions" />

</androidx.constraintlayout.widget.ConstraintLayout>